@model WEbAPi.Models.ReviewFormModel

<form asp-action="AddReview" asp-controller="Customer" method="post">
    <input type="hidden" asp-for="ProductId" />

    <div class="form-group">
        <label for="Rating">Рейтинг (1-5)</label>
        <select asp-for="Rating" class="form-control" required>
            @for (int i = 1; i <= 5; i++)
            {
                <option value="@i">@i</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="Text">Отзыв</label>
        <textarea asp-for="Text" class="form-control" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Оставить отзыв</button>
</form>
