@model WEbAPi.Models.Order

@{
    ViewData["Title"] = "Orders Create";
}

<h1>Orders Create</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="OrdersCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
