@model List<WEbAPi.Models.PosOrder>

<h2>Корзина</h2>

<table class="table">
    <thead>
        <tr>
            <th>Товар</th>
            <th>Количество</th>
            <th>Цена</th>
            <th>Итого</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>@item.Product.Title</td>
                    <td>
                        <form asp-action="UpdateCartItem" method="post" class="d-inline">
                            <input type="hidden" name="posOrderId" value="@item.PosOrderId" />
                            <input type="number" name="newCount" value="@item.Count" class="form-control" style="width: 70px; display: inline-block;" />
                            <button type="submit" class="btn btn-primary btn-sm">Обновить</button>
                        </form>
                    </td>
                    <td>@item.Product.Price ₽</td>
                    <td>@(item.Count * Convert.ToDecimal(item.Product.Price)) ₽</td>
                    <td>
                        <form asp-action="UpdateCartItem" method="post" class="d-inline">
                            <input type="hidden" name="posOrderId" value="@item.PosOrderId" />
                            <input type="hidden" name="newCount" value="0" />
                            <button type="submit" class="btn btn-danger btn-sm">Удалить</button>
                        </form>
                    </td>
                </tr>
        }
    </tbody>
</table>

<h3>Общая сумма: @ViewBag.TotalSum ₽</h3>


